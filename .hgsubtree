[HighFive]
source = gh://BlueBrain/HighFive
collapse = True
destination:
    keep include/**
    mkdir licenses
    mv LICENSE licenses/LICENSE.HighFive

[zstr]
source = gh://mateidavid/zstr
collapse = True
destination:
    mkdir include/zstr
    mv glob:src/** include/zstr
    mkdir licenses
    mv LICENSE licenses/LICENSE.zstr

[fmt]
source = gh://fmtlib/fmt
rev = release
collapse = True
destination:
    mkdir include/fmt
    mv fmt/format.h include/fmt
    mv fmt/ostream.h include/fmt
    mkdir src
    mv fmt/format.cc src
    mv fmt/ostream.cc src
    mv LICENSE.rst licenses/LICENSE.fmt
